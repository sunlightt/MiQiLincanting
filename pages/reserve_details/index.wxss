
page{
    background:#f9f9f9;
}
.parent{
    padding-bottom:188rpx;
}
.head {
     padding:0 30rpx;
    background:#fff;
    border-top:1rpx solid #e8e8e8;
}
.head .store_name{
     display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
    width:100%;
    height:92rpx;
    font:34rpx/92rpx '微软雅黑';
    color:#0a0a0a;
    position:relative;
}
.head .store_name::after{
    content:'';
    display:block;
    width:54rpx;
    height:4rpx;
    background:#c7c7c7;
    position:absolute;
    left:0;
    bottom:0;
}
.head .reserve_inf .select_date{
    display:flex;
    flex-direction:row;
    justify-content:space-between;
}
.head .reserve_inf .date_tip{
    flex:6;
    height:114rpx;
    font:32rpx/114rpx '微软雅黑';
    color:#000;
}
.head .reserve_inf .date_tip text{
    display:inline-block;
    font:26rpx/114rpx '微软雅黑';
    color:#848484;
}
.head .reserve_inf .select_date{
    border-bottom:1rpx solid #e8e8e8;
}
.head .reserve_inf .select_date .date{
    flex:4;
    height:114rpx;
    font:28rpx/114rpx '微软雅黑';
    color:#000;
    text-align:right;
    padding-right:36rpx;
    position:relative;
}
.head .reserve_inf .select_date .date::after{
    content:'>';
    display:block;
    font:24rpx '微软雅黑';
    color:#d1d1d1;
    position:absolute;
    right:0;
    top:50%;
    margin-top:-20rpx;
}
.head .change_status{
    display:flex;
    flex-direction:row;
    justify-content:space-between;
    border-bottom:1rpx solid #e8e8e8;
}
.head .change_status .tip{
    flex:7;
    display:block;
    height:94rpx;
    font:24rpx/94rpx '微软雅黑';
    color:#111;
    text-align:left;
}
.head .change_status .switch{
    display:flex;
    flex-direction:column;
    justify-content:center;
}
.head .member{
    display:flex;
    flex-direction:row;
    justify-content:space-between;
    padding:32rpx 0;
}
.head .member .left{
    flex:6;
}
.head .member .left .top{
    height:52rpx;
    font:32rpx/52rpx '微软雅黑';
}
.head .member .left .top text{
    display:inline-block;
    font:26rpx/52rpx '微软雅黑';
    color:#868686;
}
.head .member .left .limit{
    font:26rpx/46rpx '微软雅黑';
    color:#868686;
}
.head .member .right{
    flex:3;
    position:relative;
}
.head .member .right .change_num{
    display:flex;
    flex-direction:row;
    justify-content:flex-end;
    height:60rpx;
    position:absolute;
    top:50%;
    right:0;
    transform:translateY(-50%);
}
.head .member .right .change_num .reduce , .head .member .right .change_num .add{
    display:inline-block;
    width:60rpx;
    height:60rpx;
    font:40rpx/60rpx '微软雅黑';
    color:#000;
    text-align:center;
    border:1rpx solid #3b3b3b;
    border-radius:10rpx;
}
.head .member .right .change_num input{
    display:inline-block;
    width:90rpx;
    height:60rpx;
    font:40rpx/60rpx '微软雅黑';
    color:#000;
    text-align:center;
    border:1rpx solid #a1a1a1;
    margin:0 12rpx;
}

.main{
    padding-left:30rpx;
    background:#fff;
    margin-top:24rpx;
}
.main .item{
    padding-right:30rpx;
    border-bottom:1rpx solid #e8e8e8;
    display:flex;
    flex-direction:row;
    justify-content:space-between;
}
.main .item .left{
    flex:3;
}
.main .item .left text{
    display:block;
    width:100%;
    height:88rpx;
    font:28rpx/88rpx '微软雅黑';
    color:#000;
    text-align:left;
}
.main .item .right{
    flex:7;
} 
.main .item .right input{
    display:block;
    width:100%;
    height:88rpx;
    font:28rpx/88rpx '微软雅黑';
    color:#c4c4c4;
    text-align:left;
}
.main .item .right .member_wrap{
    display:flex;
    flex-direction:row;
    justify-content:space-between;
}
.main .item .right .member_wrap .area_code{
    display:block;
    width:30%;
    padding-left:26rpx;
    box-sizing:border-box;
    position:relative;
}
.main .item .right .member_wrap .area_code:before{
    content:'+';
    display:block;
    font:28rpx/88rpx '微软雅黑';
    color:#c4c4c4;
    position:absolute;
    top:0;
    left:0;
}
.main .item .right .member_wrap .area_member{
    display:block;
    width:69%;
}
.main .total_inf{
    display:flex;
    flex-direction:row;
    justify-content:flex-end;
    padding:36rpx 30rpx 36rpx 0;
}

.main .item .right .member_wrap .area_member input , .main .item .right .member_wrap .area_member input{
    display:block;
    width:100%;
}

.main .total_inf .commission , .main .total_inf .deposit{
    display:inline-block;
    height:26rpx;
    font:26rpx '微软雅黑';
    color:#0e0e0e;
}
.main .total_inf .deposit{
    margin-left:50rpx;
}
.main .total_inf .commission text , .main .total_inf .deposit text{
    display:inline-block;
    font:26rpx '微软雅黑';
    color:#ff1f3c;
    padding-left:18rpx;
    position:relative;
}
.main .total_inf .commission text::before , .main .total_inf .deposit text::before{
    content:'￥';
    display:block;
    font:16rpx '微软雅黑';
    color:#ff1f3c;
    position:absolute;
    left:0;
    bottom:0;
}

.tip_msg{
    padding:0 30rpx;
}
.tip .tip_title{
    padding-left:42rpx;
    position:relative;
}
.tip .tip_title .check{
    display:block;
    width:28rpx;
    height:28rpx;
    position:absolute;
    left:0;
    top:50%;
    transform:translateY(-50%);
}
.tip .tip_title .check checkbox{
    opacity:0;
}
.tip .tip_title .check image{
    display:block;
    width:100%;
    height:100%;
}
.tip .tip_title .text{
    height:100rpx;
    font:26rpx/100rpx '微软雅黑';
    color:#000;
    overflow:hidden;
}
.tip .tip_title .text view{
    display:inline-block;
    font:26rpx/100rpx '微软雅黑';
    color:#000;
}
.tip .tip_title .text .color{
    color:#f27151;
}

.msg_list .item{
    padding-left:28rpx;
    font:28rpx/44rpx '微软雅黑';
    color:#888;
    position:relative;
    display:block;
    text-align:left;
}
.msg_list .item::before{
    content:'';
    display:block;
    width:8rpx;
    height:8rpx;
    background:#d0d0d0;
    position:absolute;
    top:18rpx;
    left:0;
}
.msg_list .item view{
    display:inline-block;
}
.msg_list .item .color{
    color:#f27151;
} 


.submit{
    position:fixed;
    left:0;
    right:0;
    bottom:0;
    display:flex;
    flex-direction:row;
    justify-content:space-between;
    padding-left:30rpx;
    background:#fff;
    z-index:100;
}
.submit .total_price{
    width:60%;
    height:124rpx;
    font:28rpx/124rpx '微软雅黑';
    color:#000;
}
.submit .total_price .price{
    display:inline-block;
    font:30rpx/124rpx '微软雅黑';
    color:#ff0a29;
}
.submit .btn{
    width:40%;
    height:124rpx;
}
.submit .btn button{
    display:block;
    width:100%;
    height:100%;
    position:relative;
    padding:0;
    border-radius:0;
}
.submit .btn button::after{
    border:none;
}
.submit .btn button image{
    display:block;
    width:100%;
    height:100%;
}
.submit .btn button text{
    display:block;
    width:100%;
    font:32rpx/124rpx '微软雅黑';
    color:#fff;
    text-align:center;
    position:absolute;
    top:0;
    left:0;
    right:0;
}