.header {
    /* position:relative; */
    position:fixed;
    left:0;
    right:0;
    z-index:9999;
    background:#fff;
}
.header .select_type{
    display:flex;
    flex-direction:row;
    justify-content:center;
    padding:20rpx 0;
    border-bottom:2rpx solid #e5e5e5;
}

.header .select_type .address{
    width:158rpx;
    height:56rpx;
    text-align:center;
    position:relative;
}
.header .select_type .address::after{
    content:'';
    display:block;
    width:0;
    height:0;
    border-left:8rpx solid transparent;
    border-right:8rpx solid transparent;
    border-top:8rpx solid #fff;
    position:absolute;
    right:12rpx;
    top:50%;
    margin-top:-4rpx;
}
.header .select_type .address image{
    display:block;
    width:100%;
    height:56rpx;
    
}
.header .select_type .address text{
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
    width:100%;
    height:56rpx;
    font:24rpx/56rpx '微软雅黑';
    color:#fff;
    position:absolute;
    top:0;
    left:0;
    box-sizing:border-box;
    padding:0 34rpx 0 20rpx;
} 
.header .select_type .type{
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
    width:158rpx;
    height:56rpx;
    font:24rpx/56rpx '微软雅黑';
    color:#747474;
    text-align:center;
    /* box-sizing:border-box; */
    padding:0 30rpx 0 20rpx; 
    position:relative;
    margin-left:100rpx;
}

.header .select_type .type::after{
    content:'';
    display:block;
    width:0;
    height:0;
    border-left:8rpx solid transparent;
    border-right:8rpx solid transparent;
    border-top:8rpx solid #6e6e6e;
    position:absolute;
    right:12rpx;
    top:50%;
    margin-top:-4rpx;
}
.main{
    padding-top:106rpx;
}
.store_list{
    padding:0 38rpx;
}
.store_list .item{
    padding:32rpx 0;
    border-bottom:2rpx solid #e5e5e5;
}
.store_list .item:last-child{
    border-bottom:none;
}
.store_list .item .poster image{
    display:block;
    width:100%;
    height:376rpx;
}
.store_list .item .poster{
     padding-bottom:24rpx;
}
.store_list .item .title{
    padding-left:52rpx;
    position:relative;
    display:flex;
    flex-direction:row;
    justify-content:flex-start;
}
.store_list .item .title::before{
    content:'顶';
    display:block;
    width:36rpx;
    height:36rpx;
    font:18rpx/36rpx '微软雅黑';
    color:#fff;
    text-align:center;
    position:absolute;
    top:50%;
    left:0;
    margin-top:-18rpx;
    background:#3ad7c6;
}
.store_list .item .title .store_name{
    /* display:inline-block; */
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
    max-width:65%;
    height:54rpx;
    font:34rpx/54rpx '微软雅黑';
    color:#1f1f1f;
}
.store_list .item .title .store_star{
    display:inline-block;
    height:56rpx;
    line-height:56rpx;
    max-width:35%;
}
.store_list .item .title .store_star image{
    display:block;
    width:32rpx;
    height:32rpx;
    float:left;
    position:relative;
    top:12rpx;
    margin:0 3rpx;
}
.store_list .item .store_msg text{
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
    width:100%;
    height:56rpx;
    font:24rpx/56rpx '微软雅黑';
    color:#a3a3a3;
}
.store_list .item .store_inf{
    display:flex;
    flex-direction:row;
    justify-content:space-between;
}
.store_list .item .store_inf .inf_wrap{
    flex:6;
    display:flex;
    flex-direction:row;
    justify-content:flex-start;
}
.store_list .item .store_inf .inf_wrap .store_address{
    width:90rpx;
    height:38rpx;
    background:#fff3f3;
    padding:0 16rpx;
}
.store_list .item .store_inf .inf_wrap .store_address text{
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
    text-overflow:ellipsis;
    width:100%;
    vertical-align:middle;
    /* align-items:center; */
     height:38rpx; 
    white-space: nowrap;
    font:22rpx/40rpx '微软雅黑';
    color:#ff5d5d;
    text-align:center;
}
.store_list .item .store_inf .inf_wrap .store_type{
    width:140rpx;
    height:38rpx;
    background:#fde6db;
    margin-left:10rpx;
    padding:0 16rpx;
}
.store_list .item .store_inf .inf_wrap .store_type text{
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
    height:38rpx;
    font:22rpx/40rpx '微软雅黑';
    color:#f58f5c;
    text-align:center;
}
.store_list .item .store_price{
    flex:3;
    text-align:right;
    height:38rpx;
    /* display:flex;
    flex-direction:column;
    justify-content:center; */
}
.store_list .item .store_price text{
    display:inline-block;
    font:28rpx '微软雅黑';
    color:#ff435b;
    position:relative;
    padding:0 40rpx 0 24rpx;
}
.store_list .item .store_price text::before{
    content:'￥';
    display:block;
    font:20rpx '微软雅黑';
    color:#ff435b;
    position:absolute;
    left:0;
    bottom:0;
}
.store_list .item .store_price text::after{
    content:'人均';
    display:block;
    font:20rpx '微软雅黑';
    color:#a2a2a2;
    position:absolute;
    right:0;
    bottom:0;
}


.mark{
    position:fixed;
    left:0;
    right:0;
    top:0;
    bottom:0;
    background:rgba(0,0,0,.7);
    z-index:1;
}
.select_area{
    padding:30rpx 28rpx 60rpx;
}
.select_area .area_list{
    display:flex;
    flex-direction:row;
    justify-content:space-between;
    flex-wrap:wrap;
    background:#fff;
}
.select_area .area_list .item{
    display:block;
    position:relative;
    /* width:140rpx; */
    width:33%;
    margin:16rpx 0;
}
.select_area .area_list .item image{
    display:block;
    width:140rpx;
    height:140rpx;
    margin:0 auto;
    border-radius:50%;
}
.select_area .area_list .item text{
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
    width:100%;
    height:140rpx;
    font:28rpx/140rpx '微软雅黑';
    color:#fff;
    text-align:center;
    position:absolute;
    top:0;
    left:0;
}

.type_list text{
    display:inline-block;
    height:38rpx;
    font:26rpx/38rpx '微软雅黑';
    color:#747474;
    padding:0 8rpx;
    margin:14rpx 8rpx;
    border:1rpx solid #333;
    border-radius:8rpx;

}


.store_list .show_tip image{
    display:block;
    width:100%;
    height:300rpx;
}
.store_list .show_tip .tip{
    display:block;
    font:30rpx/50rpx '微软雅黑';
    color:#ea5062;
    text-align:center;
}